<%- include("partials/header.ejs") %>

<div class="container">
    <div class="col-md-12">
        <h4 class="mb-3">Make a blog post!</h4>
        <form action="/save" method="POST">
            <div class="row g-3">

                <div class="col-sm-6">
                    <label for="postTitle" class="form-label"> Title </label>
                    <input type="text" class="form-control" id="postTitle" name="postTitle">
                </div>

                <div class="col-sm-6">
                    <label for="postTag" class="form-label"> Tag </label>
                    <input type="text" class="form-control" id="postTag" name="postTag">
                </div>

                <div class="col-12">
                    <label for="postDescription" class="form-label">Description</label>
                    <input type="text" name="postDescription" id="postDescription" class="form-control">
                </div>

                <div class="col-12">
                    <label for="postBody" class="form-label">Body</label>
                    <textarea type="text" name="postBody" id="postBody" class=" form-control postBody"></textarea>
                </div>
                
            </div>
        
            <hr>
            <input class="btn btn-primary" type="submit" value="Save Post"/>
        </form>
    </div>
</div>

<%- include("partials/footer.ejs") %>